# ===========================================
# Btools - Unified Environment Configuration
# Copy this to .env and fill in your values
# Works for both local development and Vercel
# ===========================================

# App Configuration
APP_NAME=Btools
APP_VERSION=1.0.0
DEBUG=true                    # Set to false in production
PORT=3001

# MongoDB Connection String
# Local: mongodb://localhost:27017
# Atlas: mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=
MONGODB_DB=Titiksha-builtattic

# JWT Authentication (MUST match across all apps for SSO)
# Generate: openssl rand -hex 32
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Gemini AI - Get from: https://ai.google.dev/
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash

# CORS - All origins allowed by default (no configuration needed)

# URLs
MARKETPLACE_URL=http://localhost:5175
CLIENT_BASE_URL=http://localhost:5173

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Free Tier Limits
FREE_SCAN_LIMIT=3

# Stripe (Optional)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Twilio (Optional)
# TWILIO_ACCOUNT_SID=AC...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1...
# TWILIO_WHATSAPP_NUMBER=whatsapp:+1...

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Frontend Variables (VITE_ prefix)
# Vite only exposes variables prefixed with VITE_
# ===========================================

# API URL
# Development: http://localhost:3001/api
# Production: Leave empty (auto-detects /api)
VITE_API_URL=http://localhost:3001/api

# Gemini (Frontend fallback for unauthenticated users)
VITE_GEMINI_API_KEY=
VITE_GEMINI_ENABLED=true
VITE_GEMINI_MODEL=gemini-2.5-flash
VITE_GEMINI_IMAGE_MODEL=gemini-2.5-flash

# Marketplace
VITE_MARKETPLACE_URL=http://localhost:5175
